<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Salguero and Anbessa's Toy Store</display-name>

  <context-param>
    <param-name>AppName</param-name>
    <param-value>SalAnbToyStore</param-value>
  </context-param>

  <listener>
    <listener-class>com.salanb.webapp.listeners.SessionListener</listener-class>
  </listener>

  <servlet>
    <servlet-name>SalAnbToyStore</servlet-name>
    <servlet-class>com.salanb.webapp.servlets.MainServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>SalAnbToyStore</servlet-name>
    <url-pattern>/*</url-pattern>
  </servlet-mapping>

</web-app>
